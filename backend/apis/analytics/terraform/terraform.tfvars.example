# Analytics Terraform Variables Example
# このファイルをコピーして terraform.tfvars を作成し、実際の値を設定してください

# 基本設定
service_name = "learning-platform"
environment  = "dev"
aws_region   = "ap-northeast-1"

# DynamoDB テーブル設定（既存テーブルのARNを指定）
# TODO: 実際のテーブルARNに置き換えてください
users_table_arn   = "arn:aws:dynamodb:ap-northeast-1:123456789012:table/Users"
timer_table_arn   = "arn:aws:dynamodb:ap-northeast-1:123456789012:table/Timer"
records_table_arn = "arn:aws:dynamodb:ap-northeast-1:123456789012:table/Records"
roadmap_table_arn = "arn:aws:dynamodb:ap-northeast-1:123456789012:table/Roadmap"

# テーブル名
users_table_name   = "Users"
timer_table_name   = "Timer"
records_table_name = "Records"
roadmap_table_name = "Roadmap"

# Lambda設定
lambda_timeout      = 30
lambda_memory_size  = 256
lambda_runtime      = "python3.11"

# キャッシュ設定
enable_cache       = false
cache_ttl_seconds  = 300

# 分析設定
max_analysis_period_days = 365

# API Gateway設定
create_api_gateway = true
# TODO: 実際のAPI Gateway ARNに置き換えてください（API Gateway作成後）
api_gateway_execution_arn = ""

# ログ設定
log_level           = "INFO"
log_retention_days  = 14

# セキュリティ設定
# TODO: 本番環境では強力なシークレットキーに変更してください
jwt_secret_key = "change-this-in-production-to-a-strong-secret-key"

# モニタリング設定
# TODO: SNSトピックARNを設定してください（オプション）
alarm_topic_arn = ""
enable_enhanced_monitoring = false

# 共通タグ
common_tags = {
  Project     = "learning-platform"
  Service     = "analytics"
  Environment = "dev"
  ManagedBy   = "terraform"
  Owner       = "your-team-name"
}